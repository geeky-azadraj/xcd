{
  "name": "backend",
  "version": "1.0.0",
  "description": "This is backend service for XCD",
  "author": "GeekyAnts",
  "private": true,
  "license": "MIT",
  "scripts": {
    "copy:assets": "npx cpy \"views/**/*\" \"assets/**/*\" --parents --cwd=. dist",
    "build": "nest build && npm run copy:assets",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=development jest --config jest.e2e.config.ts",
    "test:e2e-coverage": "NODE_ENV=development jest --config jest.e2e.config.ts --coverage",
    "allow:permission": "sudo chmod -R 777 ./data",
    "generate:prometheus": "npm install envsub -g && npx dotenv-cli -e .env -- bash -c 'envsubst < apm/prometheus.yml.template > apm/prometheus.yml'",
    "db:dev:rm": "podman-compose down --volumes --remove-orphans",
    "db:dev:up": "podman-compose up -d",
    "generate:sdk": "npm install @openapitools/openapi-generator-cli -g && openapi-generator-cli generate -i http://localhost:3000/api-json --generator-name typescript-fetch --additional-properties modelPropertyNaming=original -o ../../libs/client_sdk -c sdk-config.json && cp sdk-tsconfig.json ../../libs/client_sdk/tsconfig.json && cd ../../libs/client_sdk && npm run build",
    "generate:client": "rm -rf ../../libs/client_sdk && npm run generate:sdk",
    "generate:openapi-spec": "curl http://localhost:3000/api-json -o openapi.json",
    "prisma:dev:deploy": "npx prisma migrate deploy --schema=./src/db/prisma/schema.prisma",
    "prisma:local:up": "npm run prisma:dev:deploy && npm run prisma:dbpull && npm run prisma:generate",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/db/prisma/schema.prisma",
    "prisma:new-migration": "npx prisma migrate dev --schema=./src/db/prisma/schema.prisma --create-only",
    "prisma:reset": "npx prisma migrate reset --schema=./src/db/prisma/schema.prisma --force",
    "prisma:dbpull": "npx prisma db pull --schema=./src/db/prisma/schema.prisma",
    "prisma:studio": "npx dotenv-cli -e .env -- npx prisma studio --schema=./src/db/prisma/schema.prisma",
    "prisma:generate": "npx prisma generate --schema=./src/db/prisma/schema.prisma",
    "prisma:seed": "ts-node src/db/prisma/seed.ts",
    "prisma:setup": "npm run prisma:migrate && npm run prisma:dbpull && npm run prisma:generate",
    "prisma:migrate-dbpull": "npm run prisma:migrate && npm run prisma:dbpull",
    "local:up": "npm run generate:prometheus && npm run db:dev:up && sleep 5 && npm run prisma:setup && npm run start:dev",
    "local:dev:up": "npm run generate:prometheus && npm run db:dev:up && sleep 5 && npm run prisma:reset && npm run prisma:local:up && npm run start:dev",
    "setup:env": "node setup-env.js",
    "setup:sso": "npm run setup:env && echo 'Please configure your OAuth providers in the .env file'"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "@nestjs/passport": "^11.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-google-oauth20": "^2.0.12",
    "@aws-sdk/client-s3": "^3.817.0",
    "@aws-sdk/client-sns": "^3.817.0",
    "@aws-sdk/s3-request-presigner": "^3.817.0",
    "@bull-board/api": "^6.9.6",
    "@bull-board/express": "^6.9.6",
    "@bull-board/nestjs": "^6.9.6",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.2",
    "@nestjs/devtools-integration": "^0.2.0",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.59.0",
    "@opentelemetry/context-async-hooks": "^2.0.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.201.1",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.201.1",
    "@prisma/client": "^6.8.2",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "bullmq": "^5.53.0",
    "cache-manager": "^6.4.3",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.6.1",
    "dotenv-cli": "^8.0.0",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "mysql2": "^3.14.3",
    "nest-winston": "^1.10.2",
    "opossum": "^8.4.0",
    "path": "^0.12.7",
    "pg": "^8.16.0",
    "prom-client": "^15.1.3",
    "pug": "^3.0.3",
    "redoc-express": "^2.1.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "sanitize-html": "^2.17.0",
    "ua-parser-js": "^2.0.3",
    "uuid": "^11.1.0",
    "uuidv4": "^6.2.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.23",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
