{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "maxNodeModuleJsDepth": 20,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "importsNotUsedAsValues": "remove",
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@common/*": ["common/*"],
      "@middlewares/*": ["middlewares/*"],
      "@interceptors/*": ["interceptors/*"],
      "@config/*": ["config/*"],
      "@logger/*": ["logger/*"],
      "@db/*": ["db/*"],
      "@redis/*": ["redis/*"],
      "@otel/*": ["otel/*"],
      "@bg/*": ["background/*"],
      "@cron/*": ["background/cron/*"],
      "@email-queue/*": ["background/queue/email/*"],
      "@notification-queue/*": ["background/queue/notification/*"],
      "@dead-letter-queue/*": ["background/queue/dead-letter/*"],
      "@metrics/*": ["api/metrics/*"],
      "@health/*": ["api/health/*"],
      "@places/*": ["api/places/*"],
      "@auth/*": ["api/auth/*"]
    }
  }
}
