doctype html
html
  head
    title= app
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f4f4f4;
        color: #333;
      }
      .logo {
        max-width: 150px;
      }
      .footer {
        font-size: 0.9rem;
        color: #888;
      }
  body
    .container.text-center.mt-5
      img.logo.mb-3(src="/assets/logo.svg", alt=app)
      h1.mb-3= app
      p.lead.mb-4= message

      if !isProd
        .d-flex.justify-content-center.gap-3
          a.btn.btn-primary(href="/api") Swagger API Docs
          a.btn.btn-secondary(href="/v1/dev-tools") Developer Tools

      .footer.mt-5
        | Environment: #{environment} | #{new Date().toDateString()}
