doctype html
html
  head
    title System Health
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    style.
      body {
        background-color: #f8f9fa;
        color: #333;
        font-family: 'Segoe UI', sans-serif;
        padding-top: 80px;
      }

      .header-bar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background-color: #ffffff;
        padding: 1rem 2rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .back-button {
        font-size: 1.1rem;
        font-weight: 500;
        text-decoration: none;
        color: #007bff;
      }

      .status-card {
        border-left: 6px solid;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        background-color: #fff;
      }

      .status-up {
        border-color: #28a745;
      }

      .status-down {
        border-color: #dc3545;
      }

  body
    .header-bar
      a.back-button(href='/v1/dev-tools') ‚Üê Dev Tools
      h4.mb-0.flex-grow-1.ms-3 System Health Status
      if user
        span.fw-semibold
          | Welcome,&nbsp;
          span(style='color: #17a2b8; font-weight: 600;') #{user}

    .container.mt-4
      if status
        .mb-4
          h5.text-muted Overall Status: #{status.toUpperCase()}

      if info
        h4.mb-3 System Checks
        each value, key in info
          .status-card(class=`status-${value.status}`)
            h5.text-capitalize #{key}
            span.badge(class=`bg-${value.status === 'up' ? 'success' : 'danger'}`)= value.status

