{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}