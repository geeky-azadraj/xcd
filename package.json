{
  "name": "xcd",
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "**/eslint",
      "**/eslint/**"
    ]
  },
  "scripts": {
    "docs:dev": "npm run start --workspace=documentation",
    "docs:build": "npm run build --workspace=documentation",
    "client_sdk:build": "npm run build --workspace=@backend/sdk",
    "permissions": "sudo chmod -R 777 ./apps/backend/data",
    "local:up": "npm run local:up --workspace=backend",
    "local:down": "npm run db:dev:rm --workspace=backend",
    "generate:sdk": "npm run generate:client --workspace=backend",
    "backend:new-migration": "npm run prisma:new-migration --workspace=backend",
    "backend:prisma-setup": "npm run prisma:setup --workspace=backend",
    "backend:prisma-studio": "npm run prisma:studio --workspace=backend",
    "backend:migrate-dbpull": "npm run prisma:migrate-dbpull --workspace=backend",
    "backend:dev": "npm run start:dev --workspace=backend",
    "backend:build": "npm run build --workspace=backend",
    "web:start": "npm run start --workspace=web",
    "web:dev": "npm run dev --workspace=web",
    "web:build": "npm run build --workspace=web"
  },
  "private": true,
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@mdx-js/react": "^3.1.0",
    "@prisma/client": "^6.15.0",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "prisma": "^6.15.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@playwright/test": "^1.52.0",
    "@swc-node/register": "~1.10.10",
    "@swc/core": "~1.11.29",
    "@swc/helpers": "~0.5.17",
    "@types/node": "~22.15.29",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=20.0"
  }
}
